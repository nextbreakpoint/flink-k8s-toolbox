{
  "supervisor": {
    "image": "integration/flink-jobs:1",
    "serviceAccount": "flink-supervisor",
    "taskTimeout": 120,
    "resources": {
      "limits": {
        "cpu": "1",
        "memory": "200Mi"
      },
      "requests": {
        "cpu": "0.1",
        "memory": "200Mi"
      }
    }
  },
  "jobs": [
    {
      "name": "job-0",
      "spec": {
        "jobParallelism": 1,
        "bootstrap": {
          "serviceAccount": "flink-bootstrap",
          "pullPolicy": "Never",
          "image": "integration/flink-jobs:1",
          "jarPath": "/flink-jobs.jar",
          "className": "com.nextbreakpoint.flink.jobs.stream.TestJob",
          "arguments": [
            "--CONSOLE_OUTPUT",
            "true"
          ],
          "resources": {
            "limits": {
              "cpu": "0.2",
              "memory": "200Mi"
            },
            "requests": {
              "cpu": "0.1",
              "memory": "200Mi"
            }
          }
        },
        "savepoint": {
          "savepointMode": "Manual",
          "savepointInterval": 60,
          "savepointTargetPath": "s3a://flink/0/savepoints",
          "restartPolicy": "Always"
        }
      }
    }
  ],
  "runtime": {
    "pullPolicy": "Never",
    "image": "integration/flink:1.9.2"
  },
  "jobManager": {
    "serviceMode": "NodePort",
    "annotations": {
      "managed": "true"
    },
    "environment": [
      {
        "name": "FLINK_JM_HEAP",
        "value": "256"
      },
      {
        "name": "FLINK_ENVIRONMENT",
        "value": "test"
      },
      {
        "name": "FLINK_GRAPHITE_HOST",
        "value": "graphite.default.svc.cluster.local"
      },
      {
        "name": "FLINK_SAVEPOINTS_LOCATION",
        "value": "file:///var/savepoints"
      },
      {
        "name": "FLINK_CHECKPOINTS_LOCATION",
        "value": "file:///var/checkpoints"
      },
      {
        "name": "FLINK_FS_CHECKPOINTS_LOCATION",
        "value": "file:///var/fs_checkpoints"
      }
    ],
    "environmentFrom": [
      {
        "secretRef": {
          "name": "flink-secrets"
        }
      }
    ],
    "volumeMounts": [
      {
        "name": "config-vol",
        "mountPath": "/hadoop/etc/core-site.xml",
        "subPath": "core-site.xml"
      },
      {
        "name": "config-vol",
        "mountPath": "/docker-entrypoint.sh",
        "subPath": "docker-entrypoint.sh"
      },
      {
        "name": "config-vol",
        "mountPath": "/opt/flink/conf/flink-conf-template.yaml",
        "subPath": "flink-conf.yaml"
      }
    ],
    "volumes": [
      {
        "name": "config-vol",
        "configMap": {
          "name": "flink-config",
          "defaultMode": "511"
        }
      }
    ],
    "extraPorts": [
      {
        "name": "prometheus",
        "containerPort": 9999,
        "protocol": "TCP"
      }
    ],
    "resources": {
      "limits": {
        "cpu": "1",
        "memory": "300Mi"
      },
      "requests": {
        "cpu": "0.1",
        "memory": "200Mi"
      }
    }
  },
  "taskManager": {
    "taskSlots": 1,
    "annotations": {
      "managed": "true"
    },
    "environment": [
      {
        "name": "FLINK_TM_HEAP",
        "value": "400"
      },
      {
        "name": "FLINK_ENVIRONMENT",
        "value": "test"
      },
      {
        "name": "FLINK_GRAPHITE_HOST",
        "value": "graphite.default.svc.cluster.local"
      },
      {
        "name": "FLINK_SAVEPOINTS_LOCATION",
        "value": "file:///var/savepoints"
      },
      {
        "name": "FLINK_CHECKPOINTS_LOCATION",
        "value": "file:///var/checkpoints"
      },
      {
        "name": "FLINK_FS_CHECKPOINTS_LOCATION",
        "value": "file:///var/fs_checkpoints"
      }
    ],
    "volumeMounts": [
      {
        "name": "config-vol",
        "mountPath": "/hadoop/etc/core-site.xml",
        "subPath": "core-site.xml"
      },
      {
        "name": "config-vol",
        "mountPath": "/docker-entrypoint.sh",
        "subPath": "docker-entrypoint.sh"
      },
      {
        "name": "config-vol",
        "mountPath": "/opt/flink/conf/flink-conf-template.yaml",
        "subPath": "flink-conf.yaml"
      }
    ],
    "volumes": [
      {
        "name": "config-vol",
        "configMap": {
          "name": "flink-config",
          "defaultMode": "511"
        }
      }
    ],
    "extraPorts": [
      {
        "name": "prometheus",
        "containerPort": 9999,
        "protocol": "TCP"
      }
    ],
    "resources": {
      "limits": {
        "cpu": "1",
        "memory": "500Mi"
      },
      "requests": {
        "cpu": "0.1",
        "memory": "500Mi"
      }
    }
  }
}
