{
  "jobParallelism": 1,
  "bootstrap": {
    "serviceAccount": "flink-bootstrap",
    "pullPolicy": "Never",
    "image": "integration/flink-jobs:1",
    "jarPath": "/flink-jobs.jar",
    "className": "com.nextbreakpoint.flink.jobs.stream.TestJob",
    "arguments": [
      "--CONSOLE_OUTPUT",
      "true"
    ],
    "resources": {
      "limits": {
        "cpu": "0.2",
        "memory": "200Mi"
      },
      "requests": {
        "cpu": "0.1",
        "memory": "200Mi"
      }
    }
  },
  "savepoint": {
    "savepointMode": "Automatic",
    "savepointInterval": 0,
    "savepointTargetPath": "s3a://flink/0/savepoints",
    "restartPolicy": "Always"
  }
}